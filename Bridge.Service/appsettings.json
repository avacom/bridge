{
  "Logging": {
    "LogLevel": {
      "Default": "Warning"
    }
  },
  "AllowedHosts": "*",

  "Processors": [
    {
      "Id": "SimpleProcessor",
      "IsActive": true,
      "DataConsumer": {
        "Assembly": "Bridge.Consumers.dll",
        "Type": "Bridge.Consumers.SimpleConsumer",
        "Parameters": {
          "delay": 10
        }
      },
      "DataTransformer": {
        "Assembly": "Bridge.Transformers.dll",
        "Type": "Bridge.Transformers.SimpleTransformer"
      },
      "DataProducer": {
        "Assembly": "Bridge.Producers.dll",
        "Type": "Bridge.Producers.SimpleProducer"
      }
    },
    {
      "Id": "RestProcessor",
      "IsActive": false,
      "DataConsumer": {
        "Assembly": "Bridge.Consumers.dll",
        "Type": "Bridge.Consumers.RestConsumer"
      },
      "DataTransformer": {
        "Assembly": "Bridge.Transformers.dll",
        "Type": "Bridge.Transformers.SimpleTransformer"
      },
      "DataProducer": {
        "Assembly": "Bridge.Producers.dll",
        "Type": "Bridge.Producers.FileProducer",
        "Parameters": {
          "fileName": "file.txt"
        }
      }
    }
  ]
}
